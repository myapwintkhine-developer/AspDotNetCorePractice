<style>
    * {
        box-sizing: border-box
    }

    /* Add padding to containers */
    .container {
        padding: 16px;
    }

    h3{
        color:green;
        text-align:center;
    }

    /* Full-width input fields */
    input[type=text],input[datetime],input[type=radio],input[checkbox],textarea{
        width: 100%;
        padding: 15px;
        margin: 5px 0 22px 0;
        display: inline-block;
        border: none;
        background: #f1f1f1;
    }

        input[type=text]:focus {
            background-color: #ddd;
            outline: none;
        }

    /* Overwrite default styles of hr */
    hr {
        border: 1px solid #f1f1f1;
        margin-bottom: 25px;
    }

    /* Set a style for the submit/register button */
    .registerbtn {
        background-color: #04AA6D;
        color: white;
        padding: 16px 20px;
        margin: 8px 0;
        border: none;
        cursor: pointer;
        width: 100%;
        opacity: 0.9;
    }

        .registerbtn:hover {
            opacity: 1;
        }

    /* Add a blue text color to links */
    a {
        color: dodgerblue;
    }

    /* Set a grey background color and center the text of the "sign in" section */
    .signin {
        background-color: #f1f1f1;
        text-align: center;
    }
</style>

<form action="/student/register" method="post">
    <div><h3>@TempData["Info"]</h3></div>
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="firstName"><b>First Name</b></label>
        <input type="text" placeholder="Enter First Name" name="firstName" required>

        <label for="lastName"><b>Last Name</b></label>
        <input type="text" placeholder="Enter First Name" name="lastName" required>

        <label for="DOB"><b>Date of Birth</b></label>
        <input type="datetime" placeholder="Enter DOB" name="DOB" required>

        <label for="Gender"><b>Gender</b></label>
        Male <input type="radio" name="Gender" value="Male" />
        Female <input type="radio" name="Gender" value="Female" />

        <label for="address"><b>Address</b></label>
        <textarea placeholder="Enter Address" cols="30" rows="10" name="address" required></textarea>


        <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
        <input type="checkbox" id="chkAgreement" value="Agreement" />
        <button type="submit" class="registerbtn" onclick="checkAgreement()">Register</button>
    </div>
    <a href="/student/index">Check Student count</a>

    <div class="container signin">
        <p>Already have an account? <a href="#">Sign in</a>.</p>
    </div>

</form>

        <script>
            function checkAgreement(){
        if (!document.getElementById("chkAgreement").checked) {
                    alert("Please check agreement");
                }
            }
        </script>